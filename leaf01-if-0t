
auto lo
iface lo inet loopback
    address 10.0.0.11/32

auto swp1
iface swp1
    bridge-access 10

auto swp11
iface swp11

auto bridge
iface bridge
    bridge-ports swp1 vxlan10 L3VNI_RED
    bridge-vids 10 1001
    bridge-vlan-aware yes

auto mgmt
iface mgmt
    vrf-table auto
    address 127.0.0.1/8

auto eth0
iface eth0 inet dhcp
    vrf mgmt
    post-up sysctl -w net.ipv6.conf.eth0.accept_ra=2

auto vlan10
iface vlan10
    address 172.31.10.111/24
#    address-virtual 00:00:00:00:00:01 172.31.10.110/24
    vlan-id 10
    vlan-raw-device bridge
    vrf RED

auto vni10
iface vni10
    bridge-access 10
    bridge-arp-nd-suppress on
    bridge-learning off
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 30010
    
auto RED
iface RED
  vrf-table auto
  
auto L3VNI_RED
iface L3VNI_RED
    bridge-access 4001
    bridge-arp-nd-suppress on
    bridge-learning off
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 3004001

auto vlan4001
iface vlan4001
    hwaddress 44:38:39:BE:EF:AA
    vlan-id 4001
    vlan-raw-device bridge
    vrf RED
